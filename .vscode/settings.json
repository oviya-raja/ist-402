{
  // Python Configuration
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/lib/python*/site-packages"
  ],
  "python.analysis.stubPath": "${workspaceFolder}/.venv/lib/python*/site-packages",
  
  // Pylance/Pyright Settings for Better Navigation
  "python.languageServer": "Pylance",
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 2
    }
  ],
  
  // File Associations
  "files.associations": {
    "*.py": "python"
  },
  
  // Editor Settings
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  
  // Jupyter Notebook Settings
  "jupyter.defaultKernel": "python3",
  "jupyter.kernels.filter": [
    {
      "type": "pythonEnvironment",
      "path": "${workspaceFolder}/.venv"
    }
  ]
}
